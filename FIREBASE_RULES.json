{
  "rules": {
    "users": {
      ".read": "true",
      "$userId": {
        ".write": "true",
        "quizResults": {
          ".indexOn": ["completedAt", "score"]
        },
        "quizProgress": {
          ".indexOn": ["timestamp"]
        }
      }
    },
    "analytics": {
      ".read": "true",
      ".write": "true"
    },
    "questionEdits": {
      ".read": "true",
      ".write": "true",
      "$editKey": {
        ".validate": "newData.hasChildren(['correct', 'timestamp'])"
      }
    },
    "questions": {
      ".read": "true",
      ".write": "true",
      "$categoryId": {
        "$questionId": {
          ".indexOn": ["id"]
        }
      }
    },
    "deletedQuestions": {
      ".read": "true",
      ".write": "true"
    },
    "categories": {
      ".read": "true",
      ".write": "true",
      "$categoryId": {
        ".indexOn": ["status"]
      }
    },
    "categoryStatus": {
      ".read": "true",
      ".write": "true",
      "$categoryId": {
        ".indexOn": ["status", "updatedAt"]
      }
    }
  }
}
